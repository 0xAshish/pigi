{
  "name": "pigi",
  "version": "0.0.1",
  "description": "Plasma Group monorepo",
  "main": "index.js",
  "scripts": {
    "lint": "tslint -p tsconfig.json -c tslint.json 'packages/**/*.ts'",
    "fix": "prettier --write 'packages/**/*.ts' 'index.ts' 'gulpfile.js'",
    "prebuild:dev": "rm -rf node_modules/@pigi",
    "clean": "gulp clean:bundle",
    "build": "npm run clean && gulp build --pkgs ${PKGS:-0}",
    "build:dev": "gulp build --dist node_modules/@pigi --pkgs ${PKGS:-0}",
    "prerelease": "gulp copy-misc && npm run build:dev",
    "publish:beta": "npm run prerelease && npm run build && ./node_modules/.bin/lerna publish --dist-tag=beta -m \"chore(@pigi) publish %s release\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plasma-group/pigi.git"
  },
  "keywords": [
    "plasma",
    "group",
    "ethereum"
  ],
  "author": "Plasma Group",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/plasma-group/pigi/issues"
  },
  "homepage": "https://github.com/plasma-group/pigi#readme",
  "dependencies": {
    "@types/bn.js": "^4.11.4",
    "bn.js": "^4.11.8",
    "ethereumjs-tx": "^1.3.7",
    "ethereumjs-vm": "^2.6.0",
    "ethers": "^4.0.27"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "delete-empty": "^2.0.0",
    "gulp": "^4.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-typescript": "^5.0.0",
    "lerna": "^3.13.1",
    "minimist": "^1.2.0",
    "mocha": "^6.0.2",
    "prettier": "^1.16.4",
    "ts-node": "^8.0.3",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.3.3333"
  }
}
