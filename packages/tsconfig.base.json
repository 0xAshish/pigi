{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "allowJs": false,
    "strict": true,
    "strictNullChecks": false
  },
  "exclude": [
    "../node_modules",
    "./**/*.spec.ts"
  ]
}
